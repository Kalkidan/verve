<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="header"
            type="com.example.kaltadesse.myapplication.model.ui.LandingPageHeaderModel">

        </variable>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sample_item_padding"
        android:background="#339999FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/sampleName"
            android:textSize="@dimen/header_name"
            android:textColor="@android:color/white"
            android:text="@{header.name}"
            android:textAllCaps="true"
            android:textStyle="bold"/>

    </FrameLayout>
</layout>
